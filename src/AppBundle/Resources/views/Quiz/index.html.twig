{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Quiz list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Createdat</th>
                <th>Link</th>
                <th>Adminlink</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('quiz_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.link }}</td>
                <td>{{ entity.adminlink }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('quiz_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('quiz_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('quiz_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
