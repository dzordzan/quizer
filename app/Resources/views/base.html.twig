<!doctype html>
<html>
<head>
    <title>{% block title %}Quiz Generator{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.3/jquery.mobile-1.4.3.min.css">
    <script src="https://code.jquery.com/jquery-1.8.2.min.js"></script>
    <script src="https://code.jquery.com/mobile/1.4.3/jquery.mobile-1.4.3.min.js"></script>
    <style>
      #logo-wrap {
        width: 100%;
        text-align: center;
      }
      #logo-wrap img {
          max-width: 100%;
          max-height: 150px;
      }

    </style>
</head>
<body>
    <div data-role="page" >

        <div data-role="header" data-theme="b">

            <h1>{{ block('title')}}</h1>
            <a href="{% block backlink %}./{% endblock %}" data-icon="home" data-role="button"
            class="ui-btn-left ui-btn ui-shadow ui-btn-corner-all ui-btn-icon-left ui-btn-up-b"
            data-corners="true" data-shadow="true"
            data-iconshadow="true"
            data-wrapperels="span"
            data-theme="b">
            <span class="ui-btn-inner ui-btn-corner-all">
              <span class="ui-btn-text">{% block backtext %}Strona główna{% endblock %}</span>
              <span class="ui-icon ui-icon-home ui-icon-shadow">&nbsp;
              </span>
            </span></a>
        </div><!-- /header -->

        <div data-role="content">
            {% block body %}

          {% endblock %}
          {% block javascripts %}
          {% endblock %}
        </div><!-- /content -->

        <div data-role="footer" data-theme="b">
            <h4>Andrzej Piszczek (c) 2015. Uniwersytet Ekonomiczny w Krakowie</h4>
        </div><!-- /footer -->

    </div><!-- /page -->


</body>
</html>
